<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rojo_fondo"
    tools:context=".GraficasActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresos"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_linea"
        android:layout_gravity="center_horizontal"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:layout_marginTop="30dp"
    >
    <Spinner
        android:id="@+id/spinner_mes"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/white"
        android:spinnerMode="dialog"/>

    <Spinner
        android:id="@+id/spinner_categoria"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/white"
        android:spinnerMode="dialog"/>
</LinearLayout>

    <TextView
        android:id="@+id/textoSinDatos"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="No tienes datos aÃºn"
        android:layout_gravity="center"
        android:visibility="gone" />





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="50dp"
        android:id="@+id/graph"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/guardar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/baseline_autorenew_24"
            tools:ignore="MissingConstraints"

            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="201dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Categorias -->
    <GridLayout
        android:id="@+id/bargraphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentos:"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/textoAlimentos"
            android:layout_height="20dp"
            android:layout_width="250dp"
            android:text=""
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transporte:"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/textoTransporte"
            android:layout_height="20dp"
            android:layout_width="250dp"
            android:text=""
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compras:"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/textoCompras"
            android:layout_height="20dp"
            android:layout_width="250dp"
            android:text=""
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facturas:"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/textoFacturas"
            android:layout_height="20dp"
            android:layout_width="250dp"
            android:text=""
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros:"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/textoOtros"
            android:textAlignment="center"
            android:layout_height="20dp"
            android:layout_width="250dp"
            android:text=""
            android:textColor="@color/white"
            />

    </GridLayout>



</LinearLayout>